<%= render "common/header" %>

<h3>Chatting with <%= @conversation.with(current_user).full_name %></h3>

<div id="conversation-main" style="overflow:scroll; height:350px;" >
  <div id="conversation-body" data-conversation-id="<%= @conversation.id %>">
    <%= render @conversation.private_conversations %>
  </div>
</div>

<%= form_for @private_conversation do |f| %>
  <%= hidden_field_tag 'conversation_id', @conversation.id %>
  <%= f.text_field :body, style: "width:100%;" %>
  <br>
  <%= f.file_field :attachment %>
  <br>
<% end %>

<script>
  $(document).ready(function(){
    var objDiv = document.getElementById("conversation-main");
    objDiv.scrollTop = objDiv.scrollHeight;
  })
</script>

