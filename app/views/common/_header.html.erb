<%= content_for :head do %>
  <%= stylesheet_link_tag 'header' %>
<% end %>

<div class="jumbotron">
  <div class="row">
    <div class="box-1 col-1">
      <%= link_to "Home", root_path, class: "link-to-text-color" %>
    </div>
    <div class="box-2 col"></div>
    <div>
      <% if current_user.avatar.attached? %>
        <span class="avatar">
          <image src="<%=(url_for(current_user.avatar))%>" class="rounded-circle border border-dark" style="width:30px">
        </span>
      <% end %>
      <span><strong><%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %></strong></span>
      <span><%= link_to "Sign out", destroy_user_session_path, {method: :delete} %></span>
    </div>
  </div>
</div>
